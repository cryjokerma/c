#define _CRT_SECURE_NO_WARNING 1
#include<stdio.h>
int main()
{
	int a = 10;
	int b = 0;
	//c语言中0表示假，非0表示真
	a=!a;
	//代表非，常用在if语句if(a）{}   if(!a){}
	a = sizeof(a);
	//计算类型或变量或数组大小,单位时字节后面的（）可以省略说明他是操作符不是函数（求类型大小时不可以省略）
	a = ~a;
	//~操作符为按位取反，证书在内存中的存储方式为补码，正整数的原码，反码，补码相同
	//计算过程a原码-反码-补码-取反补码-反码-原码
	int c = ++b;//先++后使用
	int d = b++;//先使用后++
	a=(int)3.14;//（）只强制类型转化
	int h = a && c;//逻辑与操作符
	h = a || c;//逻辑或操作符


	return 0;
}
